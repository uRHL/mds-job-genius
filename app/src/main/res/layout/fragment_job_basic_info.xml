<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/job_title_label"
        android:enabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_job_basic_info_headings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/job_card_item_title"
        />

    <TextView
        android:id="@+id/job_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/job_company_label"
        app:layout_constraintTop_toTopOf="@id/job_title_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/job_basic_info_inline_separator"
        android:layout_marginTop="@dimen/job_basic_info_align_titles"/>

    <TextView
        android:id="@+id/job_company_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/text_job_basic_info_headings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@id/job_title_label"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/job_card_item_company"/>

    <TextView
        android:id="@+id/job_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/job_company_label"
        app:layout_constraintTop_toTopOf="@id/job_company_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/job_basic_info_inline_separator"
        android:layout_marginTop="@dimen/job_basic_info_align_titles"/>

    <TextView
        android:id="@+id/job_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/text_job_basic_info_headings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@id/job_company_label"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/job_card_item_remote"/>

    <TextView
        android:id="@+id/job_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/job_company_label"
        app:layout_constraintTop_toTopOf="@id/job_location_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/job_basic_info_inline_separator"
        android:layout_marginTop="@dimen/job_basic_info_align_titles"
        />


</androidx.constraintlayout.widget.ConstraintLayout>